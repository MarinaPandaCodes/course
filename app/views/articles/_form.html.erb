<% if @article.errors.any? %>
  <div class="error-box">
    <h2>ðŸš« The following errors prevented the article from being saved:</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @article, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-textarea" %>
  </div>

  <div class="form-group center">
    <%= f.submit @article.persisted? ? "Update Article" : "Create Article", class: "button create" %>
  </div>
<% end %>
